/* components/suggesScall/suggesScall.wxss */
.scroll{
  height: 100%;
  width:100%;
 
}
.list{
  height: 100%;
  width:100%;
 
}
.view_Ul{
  box-sizing: border-box;
  padding: 30rpx;
}
.view_li{
  margin-bottom: 30rpx;
  border:1px solid #ccc;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: rgb(153, 153, 153) 0px 0px 5px;
}
.num{
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
  border-bottom: 1px solid #ccc;
}
.cr_time{
  padding-top:10rpx; 
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
}
.type{
  float: right;
  color: #ffbb29
} 
.sugessInfo{
  padding: 10rpx 0;
  color: #999;
  line-height: 60rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #ccc;
}
.image{
  width:480rpx;
  height: 480rpx;
  margin: 0 auto;
}
.image image{
  width:100%;
  height: 100%;
  display: block;
}
.loading{
  position: fixed;
  top:0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.8);
  z-index: 1001;
  overflow: hidden;
}
.loading>image{
  width: 200rpx;
  height: 200rpx;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%,-50%,0)
}