/* pages/personalCenter/Entrust/Entrust.wxss */
.Entrust{
  box-sizing: border-box;
  padding: 0 30rpx;
}
.Entrust_top>view:nth-child(1){
    width: 100%;
    height:300rpx; 
}
.Entrust_top>view:nth-child(1)>image{
    width: 100%;
    height:100%;
    display: block; 
}
.Entrust_top>view:nth-child(2){
    display: flex;
    margin: 30rpx 0;
}
.Entrust_top>view:nth-child(2)>view{
  flex:1;
  height: 80rpx;
  border: 1rpx solid  #e34b3e;
  border-radius: 10rpx;
  line-height: 80rpx;
}
.Entrust_top>view:nth-child(2)>view:nth-child(1){
  color:#e34b3e;
  font-size: 32rpx;
  text-align: center;
  margin-right: 10rpx;
}
.Entrust_top>view:nth-child(2)>view:nth-child(2){
  background:  #e34b3e;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
   margin-left: 10rpx;
}
.Entrust_content>view{
    width: 100%;
    box-shadow: 0 0 10px #CCCCCC;
    border-radius:10rpx;
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    margin-bottom: 30rpx;
}
.Entrust_content>view>view:nth-child(1){
   padding:  0 30rpx;
}
.Entrust_content>view>view:nth-child(1)>image{
   width: 100rpx;
   height: 100rpx;
}
.Entrust_content>view>view:nth-child(2){
      margin-right: 20rpx;
}
.Entrust_content>view>view:nth-child(2)>view:nth-child(1){
    color: black;
    font-size:32rpx;
    text-align: left;
}
.Entrust_content>view>view:nth-child(2)>view:nth-child(2){
    color: #666666;
    font-size: 24rpx;
    text-align: left;
    margin-top: 10rpx;
}
.Entrust_content>view>view:nth-child(2)>view:nth-child(3){
    color: #999999;
    font-size:24rpx;
    text-align:left;
    margin-top:10rpx;
    box-sizing:border-box;
}