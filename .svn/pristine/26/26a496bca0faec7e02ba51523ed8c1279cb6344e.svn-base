/* components/login/login.wxss */
.login{
  width:100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom:0;
  z-index: 10;
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.login .close{
  width: 20rpx;
  height: 20rpx;
  margin-bottom: 50rpx;
}
.login .closeImg{
 display: block;
 width: 100%;
  height:100%;
}
.login_top{
  display: flex;
  flex-direction:column;
}
.login_top .login_top_title{
    color: #e34b3e;
    font-size: 66rpx;  
}
.login_top .login_top_title_one{
    color: #333;
    font-size:36rpx;
    margin-top:36rpx;
}
.login_top .login_top_title_two{
    color: #999;
    font-size: 28rpx;
    margin-top: 15rpx;
}
.login_center{
  margin-top: 180rpx;
  position: relative;
}
.login_center .inputPhone{
  height: 115rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
}
.login_center .Code{
  display: flex;
  height: 115rpx;
  border-bottom: 1px solid #eee;
}
.login_center .Code .inputCode{
  flex:3;
  height: 100%;
  font-size: 28rpx;
}
.login_center .Code .getCode{
  flex:1;
  height: 100%;
  color: red;
  line-height: 115rpx;
  font-size: 28rpx;
  background: #fff;
  outline:none;
}
.login_center .content{
  width: 60%;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.7);
  position: absolute;
  border-radius: 20rpx;
  left: 20%;
  top: 25%; 
  text-align: center;
  color: #fff;
  line-height: 100rpx;
}
.login_bottom{
  margin-top: 60rpx;
  width: 100%;

}
.login_bottom .login_button{
  width: 100%;
  height: 90rpx;
  background: #e34b3e;
  color: #fff;
  border-radius:10rpx;
  font-size: 32rpx;
  text-align: center;
  line-height:90rpx;
  letter-spacing: 4rpx;
}
.login_bottom .Hotline{
  text-align: center;
  color:#e34b3e;
  font-size: 32rpx;
  letter-spacing: 1px;
  margin-top: 120rpx;

}