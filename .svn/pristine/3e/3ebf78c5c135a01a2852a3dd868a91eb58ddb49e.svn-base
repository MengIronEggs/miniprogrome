.buildCard{
  height: 210rpx ;
  border-bottom: 20rpx solid #eee;
  border-top:1px solid #eee;
  padding: 30rpx;
  
}
.cover_view{
  width: 100rpx;
  height: 100rpx;
  background-color: black;
  color: #fff;
}
.leftImg{
  float: left;
  height: 100%;
  width: 280rpx;
}
.right_box{
  padding-left:290rpx;
  height: 100%; 
}
.right_box .area{
  line-height: 44rpx;
  font-size: 28rpx;
  color:#000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}
.sizes{
  line-height: 44rpx;
  font-size: 28rpx;
  color: #999;
  margin-top:10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}
.buildName{
  height: 60rpx;
  font-size:32rpx;
  width: auto;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}
.form_box{
  padding: 0 30rpx;
}
.int_box{
  height: 100rpx;
  padding: 10rpx 15rpx; 
  border-bottom: 1px solid #ccc;

}
.labels{
  float: left;
  width: 160rpx;
  font-size: 30rpx;
  line-height:100rpx;
  height: 100%;

}
.input{
  /* padding-left: 180rpx; */
  height: 100%;
  font-size: 30rpx;
  line-height: 100rpx
}
.pickerView{
  margin-left: 160rpx;
  height: 100rpx;
  font-size: 32rpx;
  color:#A29DA5;
}
.pickerView .scantime{
  color:#000;
}
.bottombtn{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  line-height: 100rpx;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  background: #e34b3e;
}
.loading{
  position: fixed;
  top:0%;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.8);
  z-index: 1001;
}
.loading>image{
  width: 200rpx;
  height: 200rpx;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%,-50%,0);
  z-index: 1002;
}