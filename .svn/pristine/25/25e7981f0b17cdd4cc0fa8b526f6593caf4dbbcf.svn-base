/* pages/rent/Apartment/Apartment.wxss */
.background-banner{
    width: 100%;
    height: 100%;
    overflow-y: scroll;
}
.background-banner-hosue{
    width: 100%;
    height: 3000rpx;
    box-sizing: border-box;
    padding: 480rpx 0 150rpx;
    background: url(https://img.guoanfamily.com/jizhongshi.jpg) no-repeat 50%;
    background-size: 100%;
}
.background-banner-hosue .serve-box {
    width: 690rpx;
    height: 200rpx;
    margin: auto;
}
.background-banner-hosue .serve-box .serve-item{
    width: 25%;
    text-align: center;
    float: left;
    overflow: hidden;
}
.background-banner-hosue .serve-box .serve-item>image{
    margin: auto;
    width: 55rpx;
    height: 55rpx;
}

.background-banner-hosue .serve-box .serve-item>view{
    color: #000;
    font-size: 28rpx;
    margin-top: 10rpx;
}
.background-banner-hosue .right-home1{
    width: 470rpx;
    height: 360rpx;
    float: right;
    margin-top:150rpx;
    background: #fff;
    padding: 8rpx;
    margin-right: 20rpx;
}
.background-banner-hosue .right-home1>image{
    width: 100%;
    height: 100%;
}
.background-banner-hosue .lookMore1{
    color: #deccaf;
    font-size: 30rpx;
    margin-top: 800rpx;
    margin-left: 50rpx;
}
.background-banner-hosue .lookMore2{
    text-align: right;
    box-sizing: border-box;
    padding-right:40rpx;
    margin-top: 1050rpx;
}
.background-banner-hosue .bottom-home{
    width: 100%;
    height: 200rpx;
    float: left;
    margin-top:100rpx;
}
.background-banner-hosue .right-home2{
    width:470rpx;
    height:360rpx;
    float: left;
    margin-top:250rpx;
    background: #fff;
    padding: 8rpx;
    margin-left:20rpx;
}
.background-banner-hosue .right-home2>image{
    width: 100%;
    height: 100%;
}
.back-vr{
      width: 80rpx;
      height:80rpx;
      position: fixed;
      top: 80rpx;
      left:50rpx;
      background: url(https://img.guoanfamily.com/miniProgram/goback.png) no-repeat center;
      background-size:100% ;
		}