/* pages/new/newHouseDetail/newHouseDetail.wxss */
.houseDetail{
  padding: 0 30rpx;

}

.swipers{
  position: relative;
}
.swipers .Danmu{
  position: absolute;
  top:10rpx;
  height: 0;
  left: 0;
  right: 0;
}

.danmu_bg{
  width: auto;
  position: absolute;
  font-size:26rpx;
  padding: 8rpx 20rpx;
  background:  rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 22rpx;
  white-space: nowrap;
}
.headBtn{
  width: 60rpx;
  height:60rpx;
  position: absolute;
  right:20rpx;
  top:20rpx;
}
.headBtn .hertimage{
  width: 100%;
  height:100%;
}

.absitemp_img{
  float: left;
  height: 30rpx;
  width: 30rpx;
  margin: 4rpx;
}
.section{
  position: absolute;
  top:20rpx;
  width: 92%;
  left: 4%;
  background-color:rgba(255,255,255,0.6);
   height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  border-radius: 5px;
}
.swiper_box{
  height: 480rpx;
  border-radius: 5px;
  overflow: hidden;
}
.slide-image{
  width: 100%;
  height: 480rpx;
}
.tab_box{
  height: 80rpx;
  width:100%;
  overflow: hidden
}
.tab_ul{
  box-sizing: border-box;
  display: inline-block;
  white-space: nowrap;
   height:80rpx;
   padding: 20rpx 0;
   width: 100%;
}
.tab_li{
  box-sizing: border-box;
  display: inline-block;
  height: 40rpx;
  line-height:40rpx;
  font-size: 30rpx;
  text-align: center;
  border-right:1px solid #ccc;
 width: 25%
}
.tab_li.actived{
  color: red;
}
.tab_li:last-child{
  border:none
}
.tab_box{
  border-bottom: 1px solid #ccc;
}
.build_info{
  margin-top: 30rpx;
}
.build_name{
  height: 80rpx;
  font-size: 44rpx;
  font-weight: 700;
}
.tag_box{
  height: 60rpx
}
.tag_name{
  font-size: 30rpx;
  height: 40rpx;
  float: left;
  margin-right: 10rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
  background-color: #ccc;
  color: #fff;
}
.build_msg{
  padding-bottom:10rpx;
  border-bottom: 1px solid #ccc; 
}
.msg_box{
  height: 70rpx;
}
.msgs .maohao,.msg_box .titles{
  font-size: 30rpx;
  width:136rpx;
  color: #999;
  padding-right: 5rpx;
  float: left;
  text-align-last: justify;
}
.msg_box .msgs .maohao{
   width:30rpx;
}
.msg_box .msgs{
  font-size: 30rpx;
  padding-left:0rpx;
  height: 40rpx;
  overflow: hidden;
}

.build_type .titles{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #000;
}
.build_type .type_box{
  height: 480rpx;
}
.type_box{
  padding-bottom:20rpx; 
}
.type_box .type_ul{
  display: inline-block;
  white-space: nowrap;
  height: 480rpx;
}
.type_box .type_li{
  display: inline-block;
  width: 480rpx;
  height: 100%;
  margin-right: 20rpx;
  background: #eee;
}
.type_box .type_li:last-child{
  margin: 0;
}
.type_li .type_li_top{
  height: 360rpx;
}
.type_li .type_li_img{
  width: 100%;
  height: 360rpx;
}
.type_name .build_name_t{
  font-size: 30rpx;
  color: #000;
  margin-right: 20rpx;
} 
.type_name  .build_name_area{
  font-size: 30rpx;
  color: #000;
}
.type_info{
  padding: 0 10rpx;
}
.type_info .type_name_size{
  font-size: 30rpx;
  color: #999;
}
.build_mags{
  padding-bottom: 20rpx; 
  border-bottom: 1px solid #ccc;
}
.build_mags .titles2{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #000;
}
.topshow .msg_box1{
  width: 50%;
  
}
.topshow .msg_box{
  height: 70rpx;

}

.topshow{
  position: relative;
  margin-top: 10rpx;
}
.right_box{
  position: absolute;
  width:42%;
  right:0rpx;
  top: 0;

}
.btn_all{
  height: 44rpx;
  background: #ccc;
  text-align: center;
  line-height: 44rpx;
}
.btn_all .imgs{
  width: 26rpx;
  height: 26rpx;
}
.tel_box{
  height: 200rpx;
  padding-bottom:160rpx; 
}
.tel_box .titles2{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #000;
}
.tel_box .left{
  float: left;
  width: 80%;
  height: 100rpx;
}
.tel_box .tel_num{
  color: #d6000f;
}
.tel_box .tel_msg{
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #999;
}
.tel_box .right{
  float: right;
  width: 80rpx;
  height: 80rpx;
  background: url("http://img.guoanfamily.com/miniProgram/hotphone.png") center no-repeat/90%;
  
}
.btn_box{
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0; 
}
.btn_box .btn_sty{
  width: 50%;
  height: 100%;
  float: left;
  text-align: center;
  font-size: 34rpx;
  line-height: 80rpx;
  background-color: #ccc;
  color: #fff;
}

.btn_box .btn_sty.red{
  background-color: #d6000f;
  
}
@keyframes danmu {
  from {
    left: 100%;
  }
  to {
    left: -100%;
  }
}