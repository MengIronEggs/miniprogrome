  // 分享
  onShareAppMessage(options) {
    let path = `/pages/rent/rentIndex/rentIndex`
    return {
      title: this.data.homeName,
      path: path,
      imageUrl: this.data.imgUrls[0]['url'] + "?imageView2/0/w/370",
