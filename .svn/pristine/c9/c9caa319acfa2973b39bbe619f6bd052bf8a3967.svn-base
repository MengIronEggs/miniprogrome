  imgUrls(){
    app.globalData.$get("palmsaleapp/api/v1/banner/appList?projectType=4").then((res) => {
      let imgs = [];
      let resArr = res.data;
      for (let i = 0; i < 3; i++) {
        let item = {};
        item.url = 'http://img.guoanfamily.com/' + resArr[i].multimefileName;
        item.id = resArr[i].id;
        // item.productType = resArr[i].id
        imgs.push(item)
      }
      this.setData({
        imgUrls: imgs
      })
    });
  },
  // 区域搜索
  findRentRoom(){
    this.turnRouter("#/HouseList/HotSearch?")
  },
