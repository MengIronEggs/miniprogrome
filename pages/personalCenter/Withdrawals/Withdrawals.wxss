  padding: 0 30rpx;
}
.top_card{

  padding-top: 30rpx; 
  height: 270rpx;
  background: url("https://img.guoanfamily.com/miniProgram/withdraw02.png") center no-repeat/100% 100%;
   
}

.topBox{
  height: 200rpx;
}
.TBox{
  padding-left: 40rpx; 
  width: 240rpx;
  float: left;
  height: 200rpx;
}
.Thead{
  line-height: 60rpx;
  font-size: 30rpx;
  color:#fff;
}
.TNum{
  line-height: 120rpx;
  font-size: 70rpx;
  color:#fff;
}
.bottom{
  line-height: 50rpx;
  font-size: 30rpx;
  padding-left: 40rpx;
  color:#fff;
}
.Numinput{
  height: 120rpx;
  margin-top: 50rpx;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
  position: relative;
}
.ipt{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding-left:150rpx; 
  font-size: 70rpx;
}
.left_box{
  position: absolute;
  left: 0;
  top:0;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 90rpx;
  text-align: center;
}
.btn_bottom{
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.btn_bottom .btn{
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #fff;
  background-color: #d6000f;
}