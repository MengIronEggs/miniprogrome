.tab_box{
  height: 80rpx;
  border-top:1px solid #ccc;
  border-bottom: 1px solid #ccc;
  
}
.tab_btn{
  width: 50%;
  height: 80rpx;
  text-align: center;
  color: #999;
  font-size: 30rpx;
  line-height: 80rpx;
  float: left;
  background: #eee;
  
}
.tab_btn.Actived{
  color:#d6000f;
  background: #fff;
}
.bodys{
  position: absolute;
  bottom: 0;
  top:82rpx;
  width:100%;
}
.suggest{
  padding: 0 30rpx;
}
.titles{
  height: 80rpx ;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #000;
}
.textarea{
  width: 100%;
  border: 1px solid #ccc;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 26rpx;
  background: #eee;
  border-radius: 10rpx;
}
.btn_box{
  height: 80rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #d6000f; 
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 0;

}
.loading{
  position: fixed;
  top:0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.8);
  z-index: 1001;
  overflow: hidden;
}
.loading>image{
  width: 200rpx;
  height: 200rpx;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%,-50%,0)
}